{
  "manifest_version": 3,
  "name": "Tab Monitor Extension",
  "version": "1.0.0",
  "description": "Monitor tab changes, visibility, and capture page data",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Tab Monitor"
  }
}